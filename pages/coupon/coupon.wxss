/* pages/coupon/coupon.wxss */
.discounts-list {
  width: 92%;
  margin: 20rpx auto;
  height: 120rpx;
  display: flex;
  background-color: #fff;
}
.d-left-cont {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  padding: 12rpx;
  margin-left: 20rpx;
  font-size: 30rpx;
  box-shadow: 1px 1px 1px #ccc;
}
.d-left-cont .d-left-price {
  color: #ff3760;
  font-size: 32rpx;
}
.d-left-cont .d-left-price text {
  font-size: 26rpx;
  margin-left: 10rpx;
}
.d-right-now {
  flex: 0 0 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ff3760;
  font-size: 30rpx;
  color: #fff;
  padding: 0 14rpx;
  letter-spacing: 2rpx;
}
.d-right-now-active {
  flex: 0 0 20%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  padding: 0 14rpx;
  letter-spacing: 2rpx;
  background-color: #eee;
  color: #ff3760;
  transition: all .5s;
}
.empty-wrap {
    margin-top: 150rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.empty-wrap text {
    margin-bottom: 20rpx;
}
.empty-title {
    font-size: 34rpx;
}
.empty-wrap .empty-slt {
    color: #666;
    margin-bottom: 40rpx;
}
.empty-guangguang {
    padding: 4rpx 40rpx;
    border: 1px solid #ff6887;
    color: #ff6887;
    border-radius: 10rpx;
}
