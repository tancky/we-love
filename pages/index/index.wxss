
@import "../../weui/weui.wxss";

/**index.wxss**/
.swiper {
    height: 400rpx;
}
.slide-image {
    width: 750rpx;
    height: 400rpx;
}

/*search-bar*/
.wrapper {
    width: 92%;
    margin:0 auto;
}
.search-bar {
    display: flex;
    justify-content: center;
    margin: 30rpx 0;
    align-items: center;
    border: 1px solid #ff6887;
    border-radius: 30rpx;
}
.search-bar image{
    width: 48rpx;
    height:48rpx;
    margin: 3rpx 0;
    margin-left: 14rpx;
}
.place-holder {
    font-size: 28rpx;
    color: #ff6887;
    letter-spacing: 1rpx;
}

/*discounts*/
.discounts image {
    width: 100%;
    height: 130rpx;
}

/*advertiment*/
.ad {
    width: 100%;
    height: 200rpx;
    margin: 10rpx 0;
}

/*index-product*/
.index-product-wrap {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}
.index-pro {
    flex:0 0 335rpx;
    display: flex;
    flex-direction: column;
    background-color: #fff;
    margin-bottom: 20rpx;
}
.index-pro image {
    width: 335rpx;
    height: 335rpx;
}
.index-pro-info {
    font-size: 28rpx;
    margin: 20rpx 10rpx;
    overflow:hidden;
    text-overflow:ellipsis;
    display:-webkit-box;
    -webkit-box-orient:vertical;
    -webkit-line-clamp:2;
}
.index-pro-price {
    margin: 0 10rpx;
    margin-bottom: 20rpx;
    color: #ff3312;
}

/*weui加载刷新样式*/
.weui-loadmore__tips_in-line {
    background-color: #fafafa;
}